apiVersion: apps/v1
kind: Deployment
metadata:
  name: authjs
spec:
  replicas: 1
  selector: 
    matchLabels:
      app: authjs
  template:
    metadata:
      labels:
        app: authjs
    spec:
      containers:
        - name: authjs
          image: damian/authjs
          imagePullPolicy: Never

---
apiVersion: v1 
kind: Service
metadata: 
  name: authjs-srv
spec:
  selector:
    app: authjs
  ports:
    - name: authjs
      protocol: TCP
      port: 3000
      targetPort: 3000